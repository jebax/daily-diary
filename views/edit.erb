<%= erb :header %>
<h3><%= @entry.title %></h3>
<form action='/entries/<%= @entry.id %>/edit' method='post'>
  <input type='hidden' name='_method' value='PATCH'>
  <textarea class='body_entry' type='text' name='body'><%= @entry.body %></textarea>
  <button type='submit' name='id' value='<%= @entry.id %>'>Update</button>
</form>
<%= erb :home_button %>
